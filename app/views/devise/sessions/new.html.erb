<div class="login-container-page content-container" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('<%= image_path 'login.jpg' %>')">
  <h1>PONG</h1>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  placeholder: "pingpongplouf@gmail.com",
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  placeholder: "••••••••",
                  input_html: { autocomplete: "current-password" } %>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      <% end %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="btn-login">
      <%= f.button :submit, "Login" %>
    </div>
  <% end %>

  <div class="toolbox-sign-in">
    <%= render "devise/shared/links" %>
  </div>

  <div class="copyright">
    <p><%= "© #{Date.today.year} PONG, Inc. All rights reserved" %></p>
  </div>
</div>
