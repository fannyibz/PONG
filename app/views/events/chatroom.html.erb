<h1><%= @event.emoji %></h1>
<h2><%= "Hello #{current_user.first_name}" %></h2>
<div id="messages" data-event-id="<%= @event.id %>">
  <% @event.messages.each do |message| %>
    <%= render message %>
  <% end %>
</div>

<%= simple_form_for [ @event, @message ], remote: true do |f| %>
  <%= f.input :content, as: :string, label: false, placeholder: "I look forward to see you!" %>
<% end %>
