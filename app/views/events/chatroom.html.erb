<div class="content-container">
  <h1 id="chat-title"><%= "#{@event.emoji} #{Event::EMOJI.find { |k, v| v == @event.emoji }.first } channel" %></h1>

  <%= link_to event_path(@event) do %>
    <p class="text-center mb-3">ADD TOGGLE HERE</p>
  <% end %>

  <div id="messages" data-event-id="<%= @event.id %>">
    <% @event.messages.each do |message| %>
      <%= render message %>
    <% end %>
  </div>

  <%= simple_form_for [ @event, @message ], remote: true do |f| %>
    <%= f.input :content, as: :string, label: false, placeholder: "Type your message here" %>
  <% end %>

  <p class="text-center"><%= "Connected as: #{current_user.first_name}" %></p>
</div>
