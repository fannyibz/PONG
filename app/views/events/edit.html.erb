<div class="content-container">
  <h1 id="event-show-title"><%= "Let's edit your plan" %></h1>

  <div class="text-center">
    <h1>WHAT are you up to?</h1>
    <p>Choose wisely your emotivent !</p>
  </div>

  <%= simple_form_for @event do |f| %>
    <%= f.input :emoji,
      as: :radio_buttons,
      wrapper_tag: :fieldset,
      label_method: lambda { |emoji| render "events/emoji_label", emoji: emoji },
      collection: Event::EMOJI.to_a.map(&:reverse),
      input_html: { multiple: false },
      item_wrapper_class: :radio,
      # selected: Event::EMOJI.first,
      include_hidden: false %>

  <div class="text-center mb-3">
    <h1>WHERE it takes place?</h1>
    <p>This is visible only to your guests</p>
  </div>

    <%= f.input :address %> <%# dont forget to get the current location + add geocoder and lat & lgt %>
    <br>
    <div id="address_coordinates" class="text-white d-flex justify-content-center"></div>
    <br>

  <div class="text-center mb-3">
      <h1>WHEN?</h1>
      <p>Your plan happens around...</p>
  </div>

  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        <%= f.input :date_time, as: :time, label: false %>
    </div>
    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
        <%= f.input :date_time, as: :string, required: false, input_html: {class: "datepicker"} %>


    </div>
    <%= f.submit "Update event", class: "btn" %>
    <% end %>
  </div>
<br>
<br>
<br>
</div>
