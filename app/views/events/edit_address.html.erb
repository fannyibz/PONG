<div class="content-container">

  <div class="pages-title">
    <div class="d-flex align-items-center justify-content-center">
      <div class="back-button-title">
        <%= link_to edit_what_event_path(@event) do %>
          <i class="fas fa-chevron-left text-white"></i>
        <% end %>
      </div>

      <div class="box-title">
        <h1>Where?</h1>
      </div>

      <div class="empty-box-title"></div>
    </div>

    <p>Choose your actual location or type an address.</p>
  </div>

  <div class="mt-3">
    <%= simple_form_for @event, url: update_address_event_path(@event) do |f| %>
      <%= f.input :address %> <%# dont forget to get the current location + add geocoder and lat & lgt %>
      <%= f.input :current_latitude, wrapper_html: {class: 'd-none'} %>
      <%= f.input :current_longitude, wrapper_html: {class: 'd-none'} %>
      <div id="address_coordinates" class="text-white d-flex justify-content-center"></div>
      <div class="fixed-bottom btn-margin-bottom">
        <%= f.button :submit, "Next ðŸ‘‰", class: "button-next" %>
      </div>
    <% end %>
  </div>
</div>

<div id="mapEventCreation"
  style="width: 100vw; height: 100vh;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
