<div class="content-container">
  <div class="text-center">
    <div>
      <div class="form-event-title">
        <%= link_to edit_when_event_path(@event) do %>
          <i class="fas fa-chevron-left"></i>
        <% end %>
      </div>

      <div class="mb-3">
        <h1>Invite your friends!</h1>
