<div class="content-container">

  <div class="titles">
    <h1>Time to invite some friends!</h1>
      <p>This will be visible only to the invitees for the duration of the event.</p>
  </div>

    <%= simple_form_for @event, url: update_friends_event_path(@event) do |f| %>
      <%= f.input :friends,
        as: :check_boxes,
        label_method: lambda { |user| render "events/user_label", user: user },
        collection: @friends,
        include_blank: false,
        include_hidden: false %>

      <div class="sticky-bottom">
        <%= f.button :submit, "Next ðŸ‘‰", class: "button-next" %>
      </div>
    <% end %>

</div>


