<div class="content-container">

  <div class="pages-title">
    <div class="d-flex align-items-center justify-content-center">
      <div class="back-button-title">
        <%= link_to event_path(@event), method: :delete, data: { confirm: "Are you sure to cancel your plan?" } do %>
          <i class="fas fa-chevron-left text-white mt-2"></i>
        <% end %>
      </div>

      <div class="box-title">
        <h1>What are you up to?</h1>
      </div>

      <div class="empty-box-title"></div>
    </div>

    <p>Pong declines all responsability if the situation gets out of control.</p>
  </div>

  <%= simple_form_for @event, url: update_what_event_path(@event) do |f| %>
    <%#= f.input :emoji, as: :radio_buttons,
    collection: Event::EMOJI %>

    <%= f.input :emoji,
      as: :radio_buttons,
      wrapper_tag: :fieldset,
      label_method: lambda { |emoji| render "events/emoji_label", emoji: emoji },
      collection: Event::EMOJI.to_a.map(&:reverse),
      input_html: { multiple: false },
      item_wrapper_class: :radio,
      # selected: Event::EMOJI.first,
      include_hidden: false %>

    <div class="background-grey fixed-bottom">
      <%= f.submit "Next ðŸ‘‰", class: "button-next d-none" %>
    </div>
  <% end %>
</div>
