<div class="content-container content-when">
  <div>
    <div class="form-event-title">
      <%= link_to edit_address_event_path(@event) do %>
        <i class="fas fa-chevron-left"></i>
      <% end %>
    </div>

    <div class="text-center mb-3">
      <h1>When?</h1>
      <p>Your plan happens around...</p>
    </div>
  </div>

  <div class="tab-centered">
    <ul class="toggle-nav nav nav-pills mb-3 d-flex justify-content-center" id="pills-tab" role="tablist">
      <li class="nav-item left-tab" role="presentation">
        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Now</a>
      </li>
      <li class="nav-item right-tab" role="presentation">
        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Later</a>
      </li>
    </ul>
  </div>

  <br>

  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
      <%= simple_form_for @event, url: update_when_event_path(@event) do |f| %>
        <%= f.input :date_time, as: :time, label: false %>
        <%= f.button :submit, "Next ğŸ‘‰", class: "button-next fixed-bottom btn-margin-bottom" %>
      <% end %>
    </div>
    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
      <%= simple_form_for @event, url: update_when_event_path(@event) do |f| %>
        <%= f.input :date_time, as: :string, required: false, input_html: {class: "datepicker"} %>
        <!-- <div class="fixed-bottom"> -->
          <%= f.button :submit, "Next ğŸ‘‰", class: "button-next fixed-bottom btn-margin-bottom" %>
        <!-- </div> -->
      <% end %>
    </div>
  </div>
</div>



