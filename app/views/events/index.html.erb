<div class="content-container text-center">
  <div>
    <div class="form-event-title">
      <%= link_to root_path do %>
        <i class="fas fa-chevron-left"></i>
      <% end %>
    </div>
  </div>

  <h1>My events</h1>

  <% unless @ongoing_events.empty? %>
    <div class="content-guest">
      <h2 class="text-white-title border-bottom">Ongoing</h2>
      <% @ongoing_events.each do |event| %>
        <div class="d-flex w-100 ">
          <%= link_to event_path(event) do %>
            <div class="event-card">
              <div class="content-center-vertical">
                <%= cl_image_tag event.user.avatar.key, class: 'avatar-small' %>
              </div>
              <div class="description-box-b mx-2">
                <div class="name-emoji-time d-inline-flex">
                  <div class="text-emoji-box d-flex">
                    <p class="text-white mr-2"><%= event.user.first_name %></p>
                    <h3 class="emoji-small"><%= event.emoji %></h3>
                  </div>
                  <div class= text-timer-small>
                    <p><%= "started #{event.time_left}min ago" %></p>
                  </div>
                </div>
                <div class="description-small">
                  <p><%= event.description %></p>
                </div>
              </div>
            </div>
          <% end %>
          <% if event.user == current_user || event.event_users.find_by(user: current_user).status == "confirmed" %>
            <div class="ml-2">
              <%= link_to chatroom_event_path(event) do %>
                <p class="conversation-icon">ðŸ’¬</p>
              <% end %>
            </div>
          <% else %>
            <div class="ml-2">
              <p class="conversation-icon icon-box-empty"></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>

  <% unless @upcoming_events.empty? %>
    <div class="content-guest mt-3">
      <h2 class="text-white-title border-bottom">Upcoming</h2>
      <% @upcoming_events.each do |event| %>
        <div class="d-flex w-100">
          <%= link_to event_path(event) do %>
            <div class="event-card">
              <div class="content-center-vertical">
                <%= cl_image_tag event.user.avatar.key, class: 'avatar-small' %>
              </div>
              <div class="description-box-b mx-2">
                <div class="name-emoji-time d-inline-flex">
                  <div class="text-emoji-box d-flex">
                    <p class="text-white mr-2"><%= event.user.first_name %></p>
                    <h3 class="emoji-small"><%= event.emoji %></h3>
                  </div>
                  <div class= text-timer-small>
                    <p><%= "Starts in #{event.time_left}" %></p>
                  </div>
                </div>
                <div class="description-small">
                  <p><%= event.description %></p>
                </div>
              </div>
            </div>
          <% end %>
          <% if event.user == current_user || event.event_users.find_by(user: current_user).status == "confirmed" %>
            <div class="ml-2">
              <%= link_to chatroom_event_path(event) do %>
                <p class="conversation-icon">ðŸ’¬</p>
              <% end %>
            </div>
          <% else %>
            <div class="ml-2">
              <p class="conversation-icon icon-box-empty"></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>


<% unless @past_events.empty? %>
  <div class="content-guest mt-3">
    <h2 class="text-white-title border-bottom">Past events</h2>
      <% @past_events.each do |event| %>
        <div class="d-flex w-100">
          <%= link_to event_path(event) do %>
            <div class="event-card">
              <div class="content-center-vertical">
                <%= cl_image_tag event.user.avatar.key, class: 'avatar-small' %>
              </div>
              <div class="description-box-b mx-2">
                <div class="name-emoji-time d-inline-flex">
                  <div class="text-emoji-box d-flex">
                    <p class="text-white mr-2"><%= event.user.first_name %></p>
                    <h3 class="emoji-small"><%= event.emoji %></h3>
                  </div>
                  <div class= text-timer-small>
                    <p><%= "#{((Time.now - event.date_time)/86400).to_i}days ago" %></p>
                  </div>
                </div>
                <div class="description-small">
                  <p><%= event.description %></p>
                </div>
              </div>
            </div>
          <% end %>
          <% if event.user == current_user || event.event_users.find_by(user: current_user).status == "confirmed" %>
            <div class="ml-2">
              <%= link_to chatroom_event_path(event) do %>
                <p class="conversation-icon">ðŸ’¬</p>
              <% end %>
            </div>
          <% else %>
            <div class="ml-2">
              <p class="conversation-icon icon-box-empty"></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>


<%
=begin %>
  <div class="content-host mt-3">
    <h2 class="text-white-title border-bottom">I'm the host of</h2>
      <% @hosted_events.each do |event| %>
        <div class="event-card mb-4">
          <div class="content-center-vertical">
            <p><%= cl_image_tag event.user.avatar.key, class: 'avatar-small' %></p>
          </div>
          <div class="description-box-b mx-2">
            <div class="name-emoji-time d-inline-flex">
              <div class="text-emoji-box d-flex">
                <p class="text-white mr-2"><%= event.user.first_name %></p>
                <h3 class="emoji-small"><%= event.emoji %></h3>
              </div>
              <div class= text-timer-small>
                <% if Time.now < event.date_time %>
                  <p><%= "Starts in #{event.time_left} min" %></p>
                <% else %>
                  <p><%= "started #{event.time_left}min ago" %></p>
                <% end %>
              </div>
            </div>
            <div class="description-small">
              <p><%= event.description %></p>
            </div>
          </div>
          <div class="ml-2">
            <i class="far fa-comment-dots conversation-icon"></i>
          </div>
        </div>
      <% end %>
  </div>

  <%
=end %>

</div>

