<div class="container">
  <h1>Welcome to the show of the event</h1>

  <!-- <h5>Toggle button to go from Event Details to Event Messages</h5> -->

  <h5>Event title</h5>
  <!-- To do later: automatic with the name of the emoji but editable -->
  <br>
  <br>

  <h5>Event emoji</h5>
  <p><%= @event.emoji %></p>
  <br>
  <br>

  <h5>Event address</h5>
  <p><%= @event.address %></p>
  <br>
  <br>

  <h5>Event date and time</h5>
  <p><%= @event.date_time %></p>
  <br>
  <br>

  <h5>Event Conversation</h5>
  <i class="fas fa-paper-plane"></i>
  <br>
  <br>

  <h5>Event host</h5>
  <p><%= @event.user.first_name %></p>
  <br>
  <%= cl_image_tag @event.user.avatar.key, height: 75, width: 100, crop: :fill %>
  <br>
  <br>

  <h5>Description</h5>
  <p><%= @event.description %></p>
  <br>
  <br>

  <h5>Event guests</h5>
  <% @event.guests.each do |guest|%>
    <p>🙋‍♀️  <%= guest.first_name %></p>
      <%= cl_image_tag guest.avatar.key, height: 75, width: 100, crop: :fill ,class: "avatar-show" %>
    <p></p>
  <% end %>

  <br>
  <p>Can I come with an extra friend? <%= event.open %></p>
  <br>

  <%# if policy(@event).edit? %>
    <%#= link_to "Edit this event", edit_event_path, class: "btn btn-primary" %>
  <%# end %>

  <%# if policy(@event).destroy? %>
    <%#= link_to "Delete #{@event.name}",
                event_path(@event),
                class: "btn btn-primary",
                method: :delete,
                data: { confirm: "Are you sure?" } %>
  <%# end %>

  <br>
  <%= link_to "Edit the event", @event_path, method: :get %>
  <br>
  <%= link_to "Invite extra friends", @event_path, method: :get %>
  <br>
  <%= link_to "Share the event", @event_path, method: :get %>
  <br>
  <%= link_to "Delete the event", @event_path, method: :get %>

  <!-- if I am host I want to see the edit button -->
  <!-- in any case I want to see the show of the event -->

  </div>
