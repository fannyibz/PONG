<div class="message-container <%= "is-author" if is_author %>" id="message-<%= message.id %>">
  <i class="author">
    <span><%= "by #{message.user.first_name}" %></span>
    <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
  </i>
  <p><%= message.content.capitalize %></p>
</div>
