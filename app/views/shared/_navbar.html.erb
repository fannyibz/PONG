<div class="navbar">
  <%= link_to root_path, class: "navbar-icon-box navbar-icon-box-active" do %>
    <i class="fas fa-map-marked-alt"></i>
    <p>Home</p>
  <% end %>

  <%= link_to events_path, class: "navbar-icon-box" do %>
    <i class="far fa-calendar-alt"></i>
    <p>Events</p>
  <% end %>

  <%= link_to dashboard_path, class: "navbar-icon-box" do %>
    <i class="fas fa-users"></i>
    <p>Friends</p>
  <% end %>

  <!-- Facebook connect -->
  <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
  <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
</div>
